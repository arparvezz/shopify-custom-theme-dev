{{ 'shop.css' | asset_url | stylesheet_tag }}


<!--  page title section -->
    <div class="page-title-section" style="background-image: url('{{ section.settings.bg_img | img_url: 'original' }} ')">
        <div class="container">
            <div class="page-title-wrapper">
                <h3 class="page-title">{{ section.settings.page_title }}</h3>
                <p class="page-subtitle">{{ section.settings.page_subtitle }}</p>
            </div>
      </div>
 </div>

{% schema %}
{
  "name": "Page title",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Select Background image"
    },
      {
        "type": "text",
        "id": "page_title",
        "label": "Page title",
        "default": "Page title"
      },{
        "type": "textarea",
        "id": "page_subtitle",
        "label": "Enter Subtitle",
        "default": "Page subtitle goes here"
      }
    ],
    "presets": [
      {
        "name": "Page title section"
      }
    ]
}
{% endschema %}