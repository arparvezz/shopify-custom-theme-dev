 {% comment %} CSS File {% endcomment %}
 {{ "contact.css" | asset_url |  stylesheet_tag }}

 <!-- text - map section -->
 <div class="text-map-section">
  <div class="container">
      <div class="text-map-wrapper">
          <div class="text-map-content-section">
              <h6 class="text-map-subtitle">{{ section.settings.text_map_subtitle }}</h6>
              <h3 class="text-map-title">{{ section.settings.text_map_title }}</h3>
              <h4 class="text-box-icon-box-title">{{ section.settings.icon_box_title }}</h4>
              <div class="text-map-icon-box">

                {% for block in section.blocks %}
                  <div class="text-map-single-icon-box">
                      <img class="text-map-single-icon" src="{{ block.settings.icon | img_url: 'original' }}" alt="">
                      <p>{{ block.settings.text }}</p>
                  </div>
                {% endfor %}
                  
              </div>
          </div>
          <div class="text-map-map-section">
            {% comment %} Map iframe code render here {% endcomment %}
              {% comment %} <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3649.913856588205!2d90.35315207441009!3d23.82166208603857!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3755c153b7186143%3A0x4fbed77507b78aa7!2z4Kaw4KeC4Kaq4Kao4KaX4KawIOCmn-Cmv-CmqOCmtuCnh-CmoQ!5e0!3m2!1sbn!2sbd!4v1725969446268!5m2!1sbn!2sbd" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe> {% endcomment %}
               {{ section.settings.map_code }}
          </div>
      </div>
  </div>
 </div>


 {% schema %}
 {
  "name": "Text map section",
  "settings": [
      {
        "type": "text",
        "id": "text_map_subtitle",
        "label": "Text map subtitle",
        "default": "Connect with us"
      },{
        "type": "text",
        "id": "text_map_title",
        "label": "Text map title",
        "default": "Visit one of our location or Contact with us!"
      },{
        "type": "text",
        "id": "icon_box_title",
        "label": "Icon box title",
        "default": "Our location"
      },{
        "type": "textarea",
        "id": "map_code",
        "label": "Enter iframe map code",
        "info": "Iframe google map goes here"
      }
    ],
    "blocks": [
      {
        "type": "single_icon_box",
        "name": "single icon box",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "select icon"
          },{
            "type": "text",
            "id": "text",
            "label": "Insert text",
            "default": "Lorem ipsum dolor sit."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Text map section"
      }
    ]
 }
 {% endschema %}