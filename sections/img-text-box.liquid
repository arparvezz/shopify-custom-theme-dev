<div class="img-text-box-section">
  <div class="container">
    <div class="img-text-box-wrapper">
      <div class="img-text-box-img-part">
        <img
          class="img-text-box-img"
          src="{{ section.settings.section_img |  img_url: 'original' }}"
          alt="{{ section.settings.section_img.alt }}"
        >
      </div>
      <div class="img-text-box-content-part">
        <h2 class="img-text-box-heading">{{ section.settings.heading }}</h2>
        <p class="img-text-box-subheading">{{ section.settings.description }}</p>
        <a href="{{ section.settings.cta_link }}" class="img-text-box-cta">{{ section.settings.cta_label }}</a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Img-text box",
  "settings": [
    {
      "type": "image_picker",
      "id": "section_img",
      "label": "Select Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Enter heading"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Enter description"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA link"
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "CTA label"
    }
  ],
  "presets": [
    {
      "name": "Img-text box",
      "settings": {}
    }
  ]
}
{% endschema %}
