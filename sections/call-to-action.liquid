<!-- call to action section -->
<div class="call-to-action-section">
  <div class="container">
      <div class="call-to-action-wrapper">
          <h5 class="cta-subtitle">{{ section.settings.heading }}</h5>
          <h3 class="cta-title">{{ section.settings.sub_heading | strip_html }}</h3>
          {% if section.settings.cta_link != blank %}
          <a class="cta-link" href="{{ section.settings.cta_link }}">{{ section.settings.cta_label }}</a>
          {% endif %}
      </div>
  </div>
</div>
{% schema %}
  {
    "name": "Call to action",
    "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "enter heading",
          "default": "Special Service"
        },{
          "type": "richtext",
          "id": "sub_heading",
          "label": "Enter description"
        },{
          "type": "url",
          "id": "cta_link",
          "label": "CTA link"
        },{
          "type": "text",
          "id": "cta_label",
          "label": "CTA label"
        }
    ],
    "presets": [
      {
        "name": "Call to action",
        "settings": {
        }
      }
    ]
  }
{% endschema %}